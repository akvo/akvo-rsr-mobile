<!-- One update list item  -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
 	android:padding="5dip"
 	>

    <ImageView
        android:id="@+id/ulist_item_thumbnail"
        android:layout_width="100dip"
        android:layout_height="80dip"
        android:scaleType="centerInside"
        android:layout_margin="10dp"
        android:contentDescription="@string/app_name"
        />
       
	<LinearLayout
  		android:layout_width="0dp"
  		android:layout_weight="1"
  		android:layout_height="wrap_content"
	    android:orientation="vertical"
		>

       	<TextView
       	    android:id="@+id/ulist_item_title"
       	    android:layout_width="fill_parent"
       	    android:layout_height="wrap_content"
       	    android:layout_marginTop="10dp"
       	    android:gravity="fill_horizontal"
       	    android:paddingBottom="5dip"
       	    android:text="@string/dummy_update_title"
       	    android:textColor="@color/dk_gray"
       	    android:textSize="14sp"
       	    android:typeface="sans" />

       	<TextView
       	    android:id="@+id/ulist_item_date"
       	    android:layout_width="fill_parent"
       	    android:layout_height="wrap_content"
       	    android:layout_marginTop="5dp"
       	    android:text="@string/dummy_time"
       	    android:textSize="12sp" />

       	<TextView
       	    android:id="@+id/ulist_item_author"
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:layout_gravity="left"
       	    android:layout_marginTop="5dp"
       	    android:text="@string/dummy_author"
       	    android:textSize="12sp" />
        
        <TextView
            android:id="@+id/ulist_item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:text="@string/state_published"
            android:textSize="12sp" />
        
   	</LinearLayout>
</LinearLayout>
